            <TextView
                android:text="Help on your fingertips"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/CardViewsubtitle"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>