<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Backgroundgrey"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view1"
android:layout_gravity="center"
android:layout_width="match_parent"
    android:layout_weight="1"
    card_view:cardElevation="5dp"

card_view:cardCornerRadius="8dp"
    android:layout_height="100dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/CardView1Title"
            android:text="Balance and Recharge"
            android:textSize="19sp" />
    <TextView
        android:text="View your balance"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:textColor="@color/CardViewsubtitle"
        android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>

 <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        card_view:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
     android:layout_marginTop="-8dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="8dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="center"
         android:layout_marginStart="15dp"
         >

         <TextView
             android:id="@+id/text2"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textColor="@color/CardView2Title"
             android:text="Data Balance"
             android:textSize="19sp" />
         <TextView
             android:text="View info of the packs you have subscribed"
             android:textSize="12sp"
             android:layout_width="match_parent"
             android:textColor="@color/CardViewsubtitle"
             android:layout_height="match_parent" />

     </LinearLayout>

 </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        card_view:cardElevation="30dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="-4dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            >

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/CardView3Title"
                android:text="Transaction History"
                android:textSize="19sp" />
            <TextView
                android:text="Your transaction history"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/CardViewsubtitle"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view4"
        card_view:cardElevation="50dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="-4dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            >

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/CardView4Title"
